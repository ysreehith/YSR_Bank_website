<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>frontend</title>
    <link rel="stylesheet" href="main.css">
</head>
<body>
    <div class="navbar">
        <div class="container">
            <a class="logo" href="#">YSR BANK</a>
            
            <img id="mobile-cta" class="mobile-menu" src="menu.svg" alt="open navigation">

            <nav>
                <img id="mobile-exit" class="mobile-menu-exit" src="menu.svg" alt="close navigation">
                <ul class="primary-nav">
                    <li><a href="/">Home page</a></li>
                    <li><a href="Accounts.ejs">Accounts</a></li>
                    <li class="current"><a href="payment.ejs">payment</a></li>
                    <li><a href="History.ejs">History</a></li>
                    
                </ul>

                <ul class="secondary-nav">
                    <li><a href="Help.ejs">Help</a></li>
                    <li><a href="Notifications.ejs">Notifications</a></li>
                    
                </ul>
                
            </nav>
        </div>
    </div>

    <script>

        const mobileBtn = document.getElementById('mobile-cta')
            nav = document.querySelector('nav')
            mobileBtnExit = document.getElementById('mobile-exit');

        mobileBtn.addEventListener('click', () =>{
            nav.classList.add('menu-btn');
        })

        mobileBtnExit.addEventListener('click', () =>{
            nav.classList.remove('menu-btn');
        })
    </script>

    <section class="transaction">
        <div class="container">

            <form action="/ds" method="POST">
                <label for="Beneficiary Account NO">Beneficiary Account NO</label>
                <input type="text" id="Beneficiary Account NO" name="ra_id">

                <label for="Sender Account ID">Sender Account ID</label>
                <input type="text" id="Sender Account ID" name="sa_id">

                <label for="Amount">Amount</label>
                <input type="text" id="Amount" name="attr">

                <input type="submit" class="submit" value="TRANSFER">
            </form>
        </div>
    </section>
</body>
</html>